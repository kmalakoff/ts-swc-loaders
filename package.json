{
  "name": "ts-swc-loaders",
  "version": "2.4.0",
  "description": "Typescript loaders for swc",
  "keywords": [
    "typescript",
    "swc",
    "loader",
    "require"
  ],
  "homepage": "https://github.com/kmalakoff/ts-swc-loaders",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kmalakoff/ts-swc-loaders.git"
  },
  "license": "MIT",
  "author": "Kevin Malakoff <kmalakoff@gmail.com> (https://github.com/kmalakoff)",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index-esm.js",
      "require": "./dist/cjs/index-cjs.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/cjs/index-cjs.js",
  "types": "dist/cjs/index-cjs.d.ts",
  "bin": {
    "ts-swc": "bin/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsds build",
    "format": "tsds format",
    "prepublishOnly": "tsds validate",
    "test": "tsds test:node --no-timeouts",
    "test:engines": "nvu engines tsds test:node --no-timeouts",
    "version": "tsds version"
  },
  "dependencies": {
    "cross-spawn-cb": "*",
    "exit": "*",
    "homedir-polyfill": "*",
    "is-builtin-module": "^3.2.1",
    "mkdirp-classic": "*",
    "module-root-sync": "*",
    "pirates": "^2.1.2",
    "read-tsconfig-sync": "*",
    "resolve-bin-sync": "*",
    "rimraf2": "*",
    "short-hash": "*",
    "test-match": "*",
    "ts-swc-transform": "*"
  },
  "devDependencies": {
    "@types/exit": "*",
    "@types/mocha": "*",
    "@types/node": "*",
    "core-js": "*",
    "cr": "*",
    "getopts-compat": "*",
    "module-link-unlink": "*",
    "node-version-use": "*",
    "react": "*",
    "ts-dev-stack": "*",
    "tsds-config": "*",
    "tsds-mocha": "*"
  },
  "engines": {
    "node": ">=0.8"
  },
  "tsds": {
    "source": "src/index-esm.ts"
  }
}
